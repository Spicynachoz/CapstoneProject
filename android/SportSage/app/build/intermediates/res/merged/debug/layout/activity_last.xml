<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView

        android:text="MATCHMAKER"
        android:gravity="center"
        android:id="@+id/maker"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:background="#00bfff"
        />

    <Spinner
        android:prompt="@string/home"
        android:id="@+id/hteam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:entries="@array/home_array"
        />

    <Spinner
        android:prompt="@string/away"
        android:id="@+id/ateam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:entries="@array/away_array"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:text="Home"
                android:id="@+id/tv_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/image_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
        </LinearLayout>
    <TextView
        android:id="@+id/percent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:gravity="center"
        android:text="0%"
        android:layout_weight="1"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:text="Away"
                android:id="@+id/tv_away"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/image_away"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>
        </LinearLayout>
</LinearLayout>
    <Button
        android:text="Match!"
        android:id="@+id/match"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#00bfff"
        android:textColor="#ffffff"
        android:textSize="30sp"
        />
</LinearLayout><!-- From: file:/C:/Crystal/app/src/main/res/layout/activity_last.xml -->